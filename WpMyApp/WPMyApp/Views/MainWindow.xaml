<Window x:Class="WpMyApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:WpMyApp.ViewModels"
        xmlns:views="clr-namespace:WpMyApp.Views"
        Title="IT Project Manager"
        WindowStartupLocation="CenterScreen"
        Background="#000000"
        Width="1400" Height="900">

    <Window.Resources>
        <Style x:Key="TopMenuButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="18"
                                       Margin="10,5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#cccccc"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ProjectsViewModel}">
            <views:ProjectsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:DeadlinesViewModel}">
            <views:DeadlinesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ExecutersViewModel}">
            <views:ExecutersView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:AddProjectViewModel}">
            <views:AddProjectView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ==============================
             ВЕРХНЕЕ МЕНЮ
        ===============================-->
        <DockPanel Grid.Row="0" Background="#111111" LastChildFill="True">

            <!-- Кнопка Добавить -->
            <Button Content="+"
                    Command="{Binding AddProjectCommand}"
                    Width="45" Height="45"
                    FontSize="26"
                    Background="#000000"
                    Foreground="White"
                    BorderBrush="White"
                    BorderThickness="2"
                    Margin="12"
                    HorizontalAlignment="Left"/>

            <!-- Меню -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="20,0">

                <Button Style="{StaticResource TopMenuButton}"
                        Command="{Binding GoHomeCommand}"
                         Content="Прогресс"/>

                <Button Content="Дедлайны"
                        Style="{StaticResource TopMenuButton}"
                        Command="{Binding GoDeadlinesCommand}" />

                <Button Content="Главная"
                        Style="{StaticResource TopMenuButton}"
                        Command="{Binding GoHomeCommand}" />

                <Button Content="Проекты"
                        Style="{StaticResource TopMenuButton}"
                        Command="{Binding GoProjectsCommand}" />

                <Button Content="Настройки"
                        Style="{StaticResource TopMenuButton}"
                        Command="{Binding GoSettingsCommand}" />

            </StackPanel>

        </DockPanel>


        <!-- ==============================
             ОСНОВНОЙ КОНТЕНТ
        ===============================-->
        <ContentControl Grid.Row="1"
                Content="{Binding CurrentViewModel}" />



    </Grid>
</Window>
