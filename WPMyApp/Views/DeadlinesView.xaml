<UserControl x:Class="WpMyApp.Views.DeadlinesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#000000">

    <StackPanel Margin="30">
        <TextBlock Text="Deadlines"
                   Foreground="White" FontSize="40" Margin="0 0 0 20"/>

        <ItemsControl ItemsSource="{Binding DeadlineItems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="White" BorderThickness="2" CornerRadius="12" Margin="0 10">
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding Title}" Foreground="White" FontSize="22"/>
                            <TextBlock Text="{Binding Date}" Foreground="Gray" FontSize="16"/>
                            <TextBlock Text="{Binding Remaining}" Foreground="White" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>

</UserControl>
