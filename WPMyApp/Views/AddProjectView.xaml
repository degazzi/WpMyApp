 <UserControl x:Class="WpMyApp.Views.AddProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="900"
             Background="#000000">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" MaxWidth="800">

            <TextBlock Text="Создать проект" 
                       Foreground="White"
                       FontSize="36"
                       HorizontalAlignment="Center" 
                       Margin="0 0 0 40"/>

            <Border BorderBrush="White" BorderThickness="2" Margin="20" CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Название проекта"
                               FontSize="25"
                               FontWeight="Light"
                               Foreground="White"
                               Margin="25"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding ProjectName}" 
                             Height="30"
                             FontSize="20" 
                             Background="Transparent"
                             Margin="0,30,30,30"
                             Foreground="White">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="White"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Margin="4,0"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <Border BorderBrush="White" BorderThickness="2" CornerRadius="15" Margin="20,20" Height="280">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" Margin="0 20">
                        <TextBlock Text="Исполнитель"
                                   Foreground="White"
                                   FontSize="28"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Margin="40 80 0 40">
                        <TextBlock Text="ФИО исполнителя"
                                   Foreground="White"
                                   FontSize="24"
                                   FontWeight="Light"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>

                        <ComboBox ItemsSource="{Binding AllExecuters}" 
                              SelectedItem="{Binding SelectedExecuter}"
                              FontSize="20"
                              Height="40"
                              Margin="0 0 0 20"
                              Foreground="White">
                            <!-- Стиль ComboBox -->
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <!-- Основной Border с скруглением -->
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="5">

                                                        <!-- Сетка для содержимого и стрелки -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Выбранный элемент -->
                                                            <ContentPresenter x:Name="ContentSite"
                                                                              Grid.Column="0"
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                              Margin="8,0"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"/>

                                                            <!-- Стрелка вниз -->
                                                            <Path x:Name="Arrow"
                                                                  Grid.Column="1"
                                                                  Data="M0,0 L4,4 8,0 Z"
                                                                  Fill="White"
                                                                  Stretch="Uniform"
                                                                  Width="12"
                                                                  Height="6"
                                                                  Margin="0,0,8,0"
                                                                  VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Popup для выпадающего списка -->
                                                    <Popup x:Name="PART_Popup"
                                                           AllowsTransparency="True"
                                                           Placement="Bottom"
                                                           VerticalOffset="1"
                                                           PopupAnimation="Fade">

                                                        <!-- Border для выпадающего списка -->
                                                        <Border x:Name="dropDownBorder"
                                                                Background="Transparent"
                                                                BorderBrush="White"
                                                                BorderThickness="1"
                                                                CornerRadius="5"
                                                                MaxHeight="{TemplateBinding MaxDropDownHeight}">

                                                            <!-- ScrollViewer для списка -->
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>

                                                <!-- Триггеры -->
                                                <ControlTemplate.Triggers>
                                                    <!-- При открытии -->
                                                    <Trigger Property="IsDropDownOpen" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#A0FFFFFF"/>
                                                        <Setter TargetName="border" Property="Background" Value="#10FFFFFF"/>
                                                    </Trigger>

                                                    <!-- При наведении -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>

                            <!-- Стиль для элементов списка -->
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border x:Name="itemBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="8,4">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="itemBorder" Property="Background" Value="#20FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="itemBorder" Property="Background" Value="#30FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>

                            <!-- Шаблон для элементов -->
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" 
                       Foreground="White"
                       FontSize="18"
                       Margin="4"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button Command="{Binding AddExecuterCommand}"
                                HorizontalAlignment="Left"
                                Width="40"
                                Height="40">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            CornerRadius="20"
                                            Background="Transparent"
                                            BorderBrush="White"
                                            BorderThickness="3">
                                        <TextBlock Text="+"
                                                   Foreground="White"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="0,-8,0,0"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0 80 40 40">
                        <TextBlock Text="Задача"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Light"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding AllTasks}" 
                                  SelectedItem="{Binding SelectedTask}"
                                  FontSize="20"
                                  Height="40"
                                  Margin="0,0,0,20"
                                  Foreground="White">
                            <!-- Стиль ComboBox (такой же как у первого) -->
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <!-- Основной Border с скруглением -->
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="5">

                                                        <!-- Сетка для содержимого и стрелки -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Выбранный элемент -->
                                                            <ContentPresenter x:Name="ContentSite"
                                                                              Grid.Column="0"
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                              Margin="8,0"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"/>

                                                            <!-- Стрелка вниз -->
                                                            <Path x:Name="Arrow"
                                                                  Grid.Column="1"
                                                                  Data="M0,0 L4,4 8,0 Z"
                                                                  Fill="White"
                                                                  Stretch="Uniform"
                                                                  Width="12"
                                                                  Height="6"
                                                                  Margin="0,0,8,0"
                                                                  VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Popup для выпадающего списка -->
                                                    <Popup x:Name="PART_Popup"
                                                           AllowsTransparency="True"
                                                           Placement="Bottom"
                                                           VerticalOffset="1"
                                                           PopupAnimation="Fade">

                                                        <!-- Border для выпадающего списка -->
                                                        <Border x:Name="dropDownBorder"
                                                                Background="#AA000000"
                                                                BorderBrush="White"
                                                                BorderThickness="1"
                                                                CornerRadius="5"
                                                                MaxHeight="{TemplateBinding MaxDropDownHeight}">

                                                            <!-- ScrollViewer для списка -->
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>

                                                <!-- Триггеры -->
                                                <ControlTemplate.Triggers>
                                                    <!-- При открытии -->
                                                    <Trigger Property="IsDropDownOpen" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#A0FFFFFF"/>
                                                        <Setter TargetName="border" Property="Background" Value="#10FFFFFF"/>
                                                    </Trigger>

                                                    <!-- При наведении -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>

                            <!-- Стиль для элементов списка -->
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border x:Name="itemBorder"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="8,4">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="itemBorder" Property="Background" Value="#20FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="itemBorder" Property="Background" Value="#30FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>

                            <!-- Шаблон для элементов -->
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" 
                                               Foreground="White"
                                               FontSize="18"
                                               Margin="4"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <Border BorderBrush="White" BorderThickness="2" CornerRadius="15" Margin="20 20">
                <StackPanel Margin="20">

                    <TextBlock Text="Tasks" Foreground="White" FontSize="28"/>

                    <TextBox Text="{Binding NewTaskName}" Height="40" Margin="0 10"/>

                    <StackPanel Orientation="Horizontal">
                        <ComboBox ItemsSource="{Binding Priorities}"
                                      SelectedItem="{Binding SelectedPriority}" Width="200" Margin="10 0"/>
                        <DatePicker SelectedDate="{Binding NewTaskDeadline}" Width="200" Margin="10 0"/>
                    </StackPanel>

                    <Button Content="Add task"
                                Command="{Binding AddTaskCommand}"
                                Foreground="White" Background="Black"
                                BorderBrush="White" BorderThickness="2" Margin="0 20"
                                FontSize="20" />
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 40">
                <Button Content="Delete data"
                        Command="{Binding ClearCommand}"
                        Foreground="White" Background="Black" BorderBrush="White" BorderThickness="2"
                        FontSize="24" Margin="20"/>

                <Button Content="Add project"
                        Command="{Binding SaveProjectCommand}"
                        Foreground="White" Background="Black"
                        BorderBrush="White" BorderThickness="2"
                        FontSize="24" Margin="20"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</UserControl>