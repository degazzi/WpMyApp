<UserControl x:Class="WpMyApp.Views.ExecutersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="👤 Исполнители" FontSize="28" Foreground="White"/>

            <ListBox ItemsSource="{Binding Executers}" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5" BorderBrush="#444" BorderThickness="1">
                            <TextBlock Text="{Binding Name}" Foreground="White"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
