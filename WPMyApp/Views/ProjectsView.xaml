<UserControl x:Class="WpMyApp.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#000000">

    <UniformGrid Columns="2" Margin="30" HorizontalAlignment="Center">

        <ItemsControl ItemsSource="{Binding Projects}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="White" BorderThickness="2" CornerRadius="20" Width="350" Height="200" Margin="20">
                        <StackPanel Margin="20">
                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="26"/>
                            <TextBlock Text="Задание" Foreground="Gray"/>
                            <TextBlock Text="{Binding Task}" Foreground="White"/>

                            <TextBlock Text="Дедлайн" Margin="0 10 0 0" Foreground="Gray"/>
                            <TextBlock Text="{Binding Deadline}" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </UniformGrid>

</UserControl>
