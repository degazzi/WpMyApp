<UserControl x:Class="WpMyApp.Controls.PieProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="200">
    <Grid>
        <Ellipse Fill="#e0e0e0" StrokeThickness="0" />

        <Path x:Name="PART_Sector" Fill="#CFCFCF" Stroke="Transparent" />

        <Ellipse Width="120" Height="120" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock x:Name="PART_PercentText" Text="0%" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
    </Grid>
</UserControl>
